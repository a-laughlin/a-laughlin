{
  "packages": [
    "src/**"
  ],
  "version": "0.0.14",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/",
      "publishConfig": {
        "access": "public",
        "directory": "dist"
      },
      "access": "public",
      "directory": "dist"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
