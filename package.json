{
  "name": "a-laughlin",
  "private": true,
  "root": true,
  "workspaces": [
    "src/*"
  ],
  "// all the babel stuff is only for jest": "https://github.com/facebook/jest/issues/9430",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "lodash-es": "^4"
  },
  "// more workarounds for modules in jest config": "moduleNameMapper",
  "// also some hoops to ignore webpack imports like images": "moduleNameMapper",
  "// moduleNameMapper": {
    "^.*(jpe?g|png).*$": "./jestAssetsTransformer.js"
  },
  "// jestAssetsTransformer.js would contain": "module.exports = { process() {} };",
  "jest///testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "jest": {
    "moduleDirectories": [
      "./node_modules",
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es)/)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "//webpack-node-externals": "latest",
  "//@babel/cli": "^7.4.4",
  "dependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-multi-entry": "^3.0.1",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-sucrase": "^3.1.0",
    "rollup": "^2.22.1",
    "rollup-plugin-visualizer": "^4.0.4"
  },
  "scripts": {
    "story": "",
    "watch": "webpack --mode='development' --watch",
    "start": "webpack-dev-server --mode='development' --open",
    "example": "es-dev-server --root-dir ./dist/es/redux-graphql/ --app-index index.html --node-resolve --watch --open --preserve-symlinks --module-dirs src",
    "server": "node server.js",
    "build": "rm -rf ./dist && rollup -c rollup.config.js",
    "test:clearcache": "jest --clear-cache",
    "test:exp:nowatch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --no-cache --no-watch ./src/**/*.test.js",
    "test:exp:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --no-cache --watch ./src/**/*.test.js",
    "test:nowatch": "jest --no-cache --no-watch ./src/**/*.test.js",
    "test:watch": "jest --watch ./src/**/*.test.js",
    "// test:debug requires going to chrome://inspect and opening chrome devtools for node": "",
    "// can also just use node debug in vscode with f5": "",
    "test:debug": "node --inspect node_modules/.bin/jest --watch --runInBand ./src/**/*.test.js",
    "test": "jest --watch ./src/**/*.test.js"
  }
}
